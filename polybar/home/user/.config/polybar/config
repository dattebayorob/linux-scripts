# Janela
[module/janela]
type = internal/xwindow

format-prefix = "  "
format-prefix-foreground = ${cores.icones-modulos}

format = <label>
format-background = ${cores.transparente}
format-foreground = ${cores.fontes}
format-padding = 4

label = %title%
label-maxlen = 50

label-empty = Área de Trabalho
label-empty-foreground = ${cores.fontes}

# Discos
[module/root]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true

format-mounted-prefix = " root "
format-mounted-prefix-foreground = ${cores.verde}
format-mounted-underline = ${cores.transparente}
format-mounted = <label-mounted>
label-mounted = %free%
label-mounted-foreground = ${cores.verdeclaro}


# Discos/Home
[module/home]
type = internal/fs
mount-0 = /home
interval = 10
fixed-values = true

format-mounted-prefix = "home "
format-mounted-prefix-foreground = ${cores.verde}
format-mounted-underline = ${cores.transparente}
format-mounted = <label-mounted>
label-mounted = %free%
label-mounted-foreground = ${cores.verdeclaro}


# Usuário
[module/usuario]
type = custom/script
interval = 1

format-prefix = " "
format-prefix-foreground = ${cores.azul}
format-underline = ${cores.transparente}
exec = echo $USER@$HOSTNAME
format-foreground = ${cores.azul}

# Spotify
[module/spotify]
interval = 1
format-prefix = " "
format-prefix-foreground = ${cores.spotify}
format-padding = 1
format-foreground = ${cores.fontes}
format-underline = ${cores.transparente}
type = custom/script
exec = ~/.local/bin/spotify.sh "%artist% - %title% (%album%)"
tail = true
label-maxlen = 80

